{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && pip install -r requirements.txt",
    "ignorePaths": [
      "frontend",
      "package.json",
      "package-lock.json",
      "node_modules"
    ]
  },
  "deploy": {
    "startCommand": "cd backend && python app.py",
    "healthCheckPath": "/health"
  }
}
