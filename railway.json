{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "buildCommand": "docker build --no-cache -t waste-detection-api ."
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "numReplicas": 1,
    "healthCheckPath": "/health",
    "healthCheckTimeout": 60,
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT --workers 2 --worker-class gevent --timeout 120 --access-logfile - --error-logfile - app:app"
  }
}
